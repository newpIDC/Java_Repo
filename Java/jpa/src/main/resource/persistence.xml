<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
  
    <persistence-unit name="simple-jpa">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
 
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hbm2ddl.auto" value="create"/>            
           <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
        
        </properties>
        
        <class>org.springbyexample.orm.jpa.domain.Person</class>
        <class>org.springbyexample.orm.jpa.domain.Address</class>      
 		<class>org.springbyexample.orm.jpa.domain.Job</class>
 		<class>org.springbyexample.orm.jpa.domain.JobExecution</class>
        
        <exclude-unlisted-classes/>
       
    </persistence-unit>
    
</persistence>